= title t('tt.show', resource_name: Comment.model_name.human)

- content_for :toolbar_left do
  = link_to(comments_path , class: 'btn', rel: 'tooltip', title: t('tooltips.back')) do
    %i.icon-arrow-left

  = link_to(edit_comment_path(@comment), class: 'btn', rel: 'tooltip', title: t('tooltips.edit')) do
    %i.icon-pencil

= show_for @comment do |s|
  = s.attribute :content

