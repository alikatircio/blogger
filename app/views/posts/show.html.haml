= title t('tt.show', resource_name: Post.model_name.human)

- content_for :toolbar_left do
  = link_to(posts_path , class: 'btn', rel: 'tooltip', title: t('tooltips.back')) do
    %i.icon-arrow-left

  = link_to(edit_post_path(@post), class: 'btn', rel: 'tooltip', title: t('tooltips.edit')) do
    %i.icon-pencil

= show_for @post do |s|
  = s.attribute :heading
  = s.attribute :description do
    = @post.description.html_safe
